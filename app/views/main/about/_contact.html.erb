<div class="" id="who-contact">
  <div class="section">
    <div class="level">
      <div class="level-left">
        <div class="level">
          <h2 class="title has-text-white-bis">Reach out</h2>
        </div>
      </div>

      <div class="level-right">
        <%= render 'main/about/social_link', to: 'https://twitter.com/layerkeep', logo: 'twitter' %>
        <%= render 'main/about/social_link', to: 'https://www.reddit.com/r/LayerKeep', logo: 'reddit' %>
        <%= render 'main/about/social_link', to: 'https://github.com/layerkeep', logo: 'github' %>

      </div>
    </div>
    
    <form>
      <div class="field">
        <div class="control has-icons-left">
          <input class="input" type="email" placeholder="Your email address.">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope fa-xs"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <textarea class="textarea" placeholder="Tell us about it, or just ask."></textarea>
        </div>
      </div>

      <div class="field is-grouped is-grouped-right">
        <p class="control">
          <button type="submit" class="button is-primary">Submit</button>
        </p>
      </div>
    </form>
  </div>
</div>
